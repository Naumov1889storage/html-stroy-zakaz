.dropdown {

  // Set the parent <li>’s CSS position property to ‘relative’.
  display: block;
  position: relative;
  z-index: 1
  float: left;

  li {
    display: flex
    align-items: center
    height: 43px
    padding: 0 0 0 23px
    border-bottom: 1px solid PRIMARY
    border-right: 1px solid PRIMARY
    border-left: 1px solid PRIMARY
    background: WHITE
    &:hover {
      background: PRIMARY
    }
  }

  // The CSS to hide the sub menus.
  & ul { display: none; }

  // Displays the dropdown menu on hover.
  &:hover > ul {
    display: block;
    position: absolute;

    width: 325px
  }
  &:hover li { float: none; }

  // Displays second level dropdown menus to the right of the first level dropdown menu.
  & ul ul {
    left: 100%;
    top: 0;
  }

  // Simple clearfix.
  & ul:before,
  & ul:after {
    content: " "; /* 1 */
    display: table; /* 2 */
  }
  & ul:after { clear: both; }

}

